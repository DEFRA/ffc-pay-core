#!/usr/bin/env sh

echo 'ffc-pay-batch-processor' &&
  curl --silent "https://api.github.com/repos/defra/ffc-pay-batch-processor/releases/latest" | grep '"tag_name":' | sed -E 's/.*"([^"]+)".*/\1/'

