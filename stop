#!/usr/bin/env sh
set -e
projectRoot="$(a="/$0"; a=${a%/*}; a=${a:-.}; a=${a#/}/; cd "$a/.." || return; pwd)"

show_help() {
  echo "
    Usage: path/to/ffc/pay/services [OPTION...]
    Stop payment services.

    Options:
      -h, --help       display this help text
    "
}

while :; do
  case $1 in
    -h|--help)   # Call a "show_help" function to display a synopsis, then exit.
      show_help
      exit
      ;;
    *)
      break
  esac

  shift
done

cd "${projectRoot}"
cd ./ffc-pay-batch-processor && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-enrichment && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-processing && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-submission && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-responses && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-web && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-request-editor && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-request-editor && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-pay-alerts && \
  docker-compose down $@ && \
  pgrep -f "^func start -p *" | xargs kill -9
cd ./ffc-pay-batch-validator && \
  docker-compose down $@ && \
  pgrep -f "^func start -p *" | xargs kill -9
cd ./ffc-pay-file-sender && \
  docker-compose down $@ && \
  pgrep -f "^func start -p *" | xargs kill -9
cd ./ffc-pay-file-consumer && \
  docker-compose down $@ && \
  pgrep -f "^func start -p *" | xargs kill -9
cd ./ffc-pay-event && \
  docker-compose down $@ && \
  pgrep -f "^func start -p *" | xargs kill -9
cd ./ffc-pay-event-projection && \
  docker-compose down $@ && \
  pgrep -f "^func start -p *" | xargs kill -9
cd ./ffc-pay-alerts && \
  docker-compose down $@ && \
  pgrep -f "^func start -p *" | xargs kill -9
